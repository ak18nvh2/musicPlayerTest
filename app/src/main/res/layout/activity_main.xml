<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/gl_hor0.8"
        app:layout_constraintGuide_percent="0.8"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/gl_hor0.1"
        app:layout_constraintGuide_percent="0.1"></androidx.constraintlayout.widget.Guideline>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ListSong"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl_hor0.1"
        app:layout_constraintBottom_toBottomOf="@id/gl_hor0.8"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_Child"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl_hor0.8"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tv_SongTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_Handle"
            android:text="Chưa phát bài hát nào"
            ></TextView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_Handle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_SongTitle"
            app:layout_constraintBottom_toTopOf="@id/sb_SongHandler"
            android:src="@drawable/pause"
            ></ImageView>
        <TextView
            android:id="@+id/tv_CurrentPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_Handle"
            android:text="00:00"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            >
        </TextView>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/btn_countDown"
            android:src="@drawable/ic_baseline_access_alarms_turn_off"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_SongTitle"
            app:layout_constraintTop_toTopOf="@id/tv_SongTitle"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_SongLength"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_Handle"
            android:textSize="20dp"
            android:text="00:00"></TextView>
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/sb_SongHandler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/tv_SongLength"
            app:layout_constraintBottom_toBottomOf="@id/tv_SongLength"
            app:layout_constraintLeft_toRightOf="@id/tv_CurrentPosition"
            app:layout_constraintRight_toLeftOf="@id/tv_SongLength"
            ></androidx.appcompat.widget.AppCompatSeekBar>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_NextSong"
            app:layout_constraintLeft_toRightOf="@id/btn_Handle"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_baseline_skip_next_24"
            app:layout_constraintTop_toTopOf="@id/btn_Handle"
            ></ImageView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_PreSong"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_Handle"
            android:src="@drawable/ic_baseline_skip_previous_24"
            app:layout_constraintTop_toTopOf="@id/btn_Handle"
            ></ImageView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_handleRepeat"
            app:layout_constraintLeft_toRightOf="@id/btn_NextSong"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_baseline_no_repeat_24"
            app:layout_constraintTop_toTopOf="@id/btn_NextSong"
            ></ImageView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_randomMusic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_PreSong"
            app:layout_constraintTop_toTopOf="@id/btn_PreSong"
            android:src="@drawable/shuffle"
            ></ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/btn_SelectLocalMusic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl_hor0.1"
        app:layout_constraintRight_toLeftOf="@id/btn_SelectOnlineMusic"
        android:text="Local Music"
        android:textColor="#FDFCFC"
        android:textAllCaps="false"
        android:background="@drawable/custom_background_button"
        android:layout_margin="10dp"
        ></Button>
    <Button
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/btn_SelectLocalMusic"
        android:id="@+id/btn_SelectOnlineMusic"
        android:text="Online Music"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_SelectLocalMusic"
        app:layout_constraintBottom_toBottomOf="@id/btn_SelectLocalMusic"
        android:textColor="#ffff"
        android:textAllCaps="false"
        android:background="@drawable/custom_background_button"
        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>